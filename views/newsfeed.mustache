<!-- ko with: NewsFeedModel -->
<div class="newsfeed" data-bind="css:{'hide' : state() !== 'newsfeed'}">
    <h3>Latest Happenings ...</h3>

    <div style="overflow-y: scroll; height: 600px ">

        <!-- ko foreach: newsfeed -->
        <div class="feedlet">
            <span>Trip to </span><span data-bind="text: $data.PlaceName"></span>
            <span> by </span> <span data-bind="text:$data.UserName"></span>
            <div>
                <p data-bind="text:$data.TripDescription">
                </p>
            </div>
            <span>Snapshots</span>
            <img style="width:200px; height: 5em;" data-bind="attr:{src:$parent.GetImageUrl($data.ImagePath)}"/>
        </div>
        <!-- /ko -->
    </div>
    <div>
        <button class="load-more-btn" data-bind="click:OnMoreBtn">Load More Activities</button>
    </div>
</div>
<!-- /ko -->