<!-- ko with:AddEventFormModel-->
<div data-bind="css:{'hide' : state() !== 'addeventform'}" class="addEventForm hide">

    <h3 class="form-hdgn">Add your Activity</h3>

    <form enctype="multipart/form-data">
        <div class="clearfix">
            <h3 class="pull-left">Add an Event</h3>
            <a class="pull-right cancel" data-bind="click:onCancel">Cancel</a>
        </div>

        <div>
            <label for="EventName" style="width: 20%; text-align: right">Event Name</label>
            <input name="EventName" type="text" data-bind="value: name" style="width: 50%; text-align: left">
        </div>

        <div>
            <label for="EventDescription" style="width: 20%; text-align: right">Description</label>
            <input name="EventDescription" type="text" data-bind="value: description"
                   style="width: 50%; height: 10em; text-align: left">
        </div>

        <label for="eventTime">Time</label>
        <input name="eventTime" type="datetime-local" placeholder="yyyy-mm-ddThh:mm" data-bind="value:datetime">

        <div style="width: 100%;" class="clearfix">
            <button type="button" class="pull-right submit"
                    data-bind="event:{click:function(d,t){OnSubmitForm(d,t); return false;}}">Submit
            </button>
        </div>

    </form>
</div>
<!-- /ko -->